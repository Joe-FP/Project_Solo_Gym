<h2>Edit <%= @session.title %></h2>

<form method="POST" action="/sessions/<%= @session.id %>">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="title">Title:</label>
      <input type="text" name="title" id="title" value="<%= @session.title %>"/>
    </div>

    <div class="form-el">
      <label for="session_date">Session date:</label>
      <input type="date" name="session_date" id="session_date" value="<%= @session.session_date %>"/>
    </div>

    <div class="form-el">
      <label for="session_time">Session time:</label>
      <input type="time" name="session_time" id="session_time" value="<%= @session.session_time %>"/>
    </div>

    <div class="form-el">
      <label for="duration_mins">Duration (mins):</label>
      <input type="text" name="duration_mins" id="duration_mins" value="<%= @session.duration_mins %>"/>
    </div>

    <div class="form-el">
      <label for="max_capacity">Max capacity:</label>
      <input type="text" name="max_capacity" id="max_capacity" value="<%= @session.max_capacity %>"/>
    </div>

    <div class="form-el">
      <label for="min_capacity">Min capacity:</label>
      <input type="text" name="min_capacity" id="min_capacity" value="<%= @session.min_capacity %>"/>
    </div>

    <div class="form-el">
      <label for="type">Type:</label>
      <select name="type" id="type">
        <% if @session.type == "HIIT" %>
          <option value="hiit" selected>HIIT</option>
          <option value="circuits">Circuits</option>
        <% else %>
          <option value="hiit">HIIT</option>
          <option value="circuits" selected>Circuits</option>
        <% end %>
      </select>
    </div>

    <div class="form-el">
      <label for="intensity_level">Intensity level:</label>
      <select name="intensity_level" id="intensity_level">
        <% if @session.intensity_level == "low" %>
          <option value="low" selected>Low</option>
          <option value="moderate">Moderate</option>
          <option value="high">High</option>
        <% elsif @session.intensity_level == "moderate" %>
          <option value="low">Low</option>
          <option value="moderate" selected>Moderate</option>
          <option value="high">High</option>
        <% else %>
          <option value="low">Low</option>
          <option value="moderate">Moderate</option>
          <option value="high" selected>High</option>
        <% end %>
      </select>
    </div>

    <div class="form-el">
      <input type="submit" value="Update session"/>
    </div>

  </div>
</form>
