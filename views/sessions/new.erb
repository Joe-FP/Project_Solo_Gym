<h2>Session form</h2>

<form method="POST" action="/sessions">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="title">Title:</label>
      <input type="text" name="title" id="title"/>
    </div>

    <div class="form-el">
      <label for="session_date">Session date:</label>
      <input type="date" name="session_date" id="session_date"/>
    </div>

    <div class="form-el">
      <label for="session_time">Session time:</label>
      <input type="time" name="session_time" id="session_time"/>
    </div>

    <div class="form-el">
      <label for="duration_mins">Duration (mins):</label>
      <select name="duration_mins" id="duration_mins">
        <option value="30">30</option>
        <option value="45">45</option>
        <option value="60">60</option>
      </select>
    </div>

    <div class="form-el">
      <label for="max_capacity">Max capacity:</label>
      <input type="text" name="max_capacity" id="max_capacity"/>
    </div>

    <div class="form-el">
      <label for="min_capacity">Min capacity:</label>
      <input type="text" name="min_capacity" id="min_capacity"/>
    </div>

    <div class="form-el">
      <label for="type">Type:</label>
      <select name="type" id="type">
        <option value="HIIT">HIIT</option>
        <option value="BW Circuit">BW Circuit</option>
        <option value="Weighted Circuit">Weighted Circuit</option>
      </select>
    </div>

    <div class="form-el">
      <label for="intensity_level">Intensity level:</label>
      <select name="intensity_level" id="intensity_level">
        <option value="Low">Low</option>
        <option value="Moderate">Moderate</option>
        <option value="High">High</option>
      </select>
    </div>

    <div class="form-el">
      <input class='member_btns' type="submit" value="Create session"/>
    </div>

  </div>
</form>
