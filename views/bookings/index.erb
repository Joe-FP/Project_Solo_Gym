<h1>Bookings</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Contact number</th>
    <th>Email</th>
    <th>Premium</th>
    <th>Title</th>
    <th>Date</th>
    <th>Time</th>
    <th>Duration (mins)</th>
    <th>Type</th>
    <th>Intensity</th>
  </tr>
  <% for booking in @bookings %>
  <tr>
    <td><%= booking.member.name %></td>
    <td><%= booking.member.contact_number %></td>
    <td><%= booking.member.email %></td>
    <td><%= booking.member.premium_member %></td>
    <td><%= booking.session.title %></td>
    <td><%= booking.session.session_date %></td>
    <td><%= booking.session.session_time %></td>
    <td><%= booking.session.duration_mins %></td>
    <td><%= booking.session.type %></td>
    <td><%= booking.session.intensity_level %></td>
    <td>
      <form action="/bookings/<%= booking.id %>" method="POST">
        <input type="submit" value="Cancel booking">
      </form>
    </td>
  </tr>
  <% end %>
</table>

<form action="/bookings/new" method="get"><input type="submit" value="Create new booking"></form>
