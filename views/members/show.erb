<h2><%= @member.name %> (member)</h2>

<table>

  <tr>
    <td>Contact number:</td>
    <td><%= @member.contact_number %></td>
  </tr>
  
  <tr>
    <td>Email:</td>
    <td><%= @member.email %></td>
  </tr>

  <tr>
    <td>Address:</td>
    <td><%= @member.address %></td>
  </tr>

  <tr>
    <td>Premium member:</td>
    <td><%= @member.premium_member %></td>
  </tr>

</table>

<form action="/members/<%= @member.id %>/delete" method="POST"><input type="submit" value="Delete"></form>
<a href="/members/<%= @member.id %>/edit">Edit</a>
