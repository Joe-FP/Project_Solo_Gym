<h1>Members</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th>Email Address</th>
    <th></th>
    <th>Contact number</th>
    <th></th>
  </tr>
  <% for member in @members %>
  <tr>
    <td><%= member.name %></td>
    <td>|</td>
    <td><%= member.email %></td>
    <td>|</td>
    <td><%= member.contact_number %></td>
    <% if @route != 'session' %>
      <td><form action="/members/<%= member.id %>" method="get"><input type="submit" value="View"></form></td>
    <% end %>
  </tr>
  <% end %>
</table>

<% if @route != 'session' %>
  <form action="/members/new" method="get"><input type="submit" value="Add new member"></form>
<% end %>
